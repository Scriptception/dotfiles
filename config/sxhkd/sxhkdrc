# Terminal
super + Return
    alacritty

super + shift + e
    killall bspwm

# Restart sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# Close focused window
super + q
    bspc node -c
super + shift + q
    bspc node -k

# Toggle fullscreen
super + f
    bspc node -t fullscreen

# Tile focused window
super + t
    bspc node -t tiled

# Launch Firefox
super + w
    firefox

# Application launchers
super + d
    dmenu_run
super + r
    rofi -show run

# File manager
super + e
    thunar

# Toggle audio
super + p
    pulseaudio-ctl toggle

# System monitor
super + b
    alacritty -e btop

#################################
# VIM-style Focus Navigation (hjkl)
#################################

# Move focus between windows
super + h
    bspc node -f west
super + j
    bspc node -f south
super + k
    bspc node -f north
super + l
    bspc node -f east

# Swap windows (move window in direction)
super + shift + h
    bspc node -s west
super + shift + j
    bspc node -s south
super + shift + k
    bspc node -s north
super + shift + l
    bspc node -s east

# Toggle floating
super + shift + f
    bspc node -t floating

#################################
# Workspaces
#################################

# Switch to desktop
super + 1
    bspc desktop -f 1
super + 2
    bspc desktop -f 2
super + 3
    bspc desktop -f 3
super + 4
    bspc desktop -f 4
super + 5
    bspc desktop -f 5
super + 6
    bspc desktop -f 6
super + 7
    bspc desktop -f 7
super + 8
    bspc desktop -f 8
super + 9
    bspc desktop -f 9

# Move focused window to desktop
super + shift + 1
    bspc node -d 1
super + shift + 2
    bspc node -d 2
super + shift + 3
    bspc node -d 3
super + shift + 4
    bspc node -d 4
super + shift + 5
    bspc node -d 5
super + shift + 6
    bspc node -d 6
super + shift + 7
    bspc node -d 7
super + shift + 8
    bspc node -d 8
super + shift + 9
    bspc node -d 9

#################################
# Lock screen (updated keybind)
#################################
super + BackSpace
    i3lock-fancy

# Expand inner gaps
super + minus
    bspc config -d focused window_gap $(( $(bspc config -d focused window_gap) + 10 ))

# Shrink inner gaps
super + equal
    [ $(bspc config -d focused window_gap) -ge 10 ] && \
    bspc config -d focused window_gap $(( $(bspc config -d focused window_gap) - 10 ))


super + shift + s
    flameshot gui

super + period
    $HOME/Venvs/main/bin/rofimoji --action type


# WINDOW MODES

# Toggle floating mode
super + u
    bspc node -t floating

# Toggle fullscreen
super + f
    bspc node -t ~fullscreen

# Toggle pseudo-tile
super + p
    bspc node -t ~pseudo_tiled

# Toggle between tiled and monocle layout
super + m
    bspc desktop -l next

# Force monocle layout
super + shift + m
    bspc desktop -l monocle

# Force tiled layout
super + shift + t
    bspc desktop -l tiled

# Set preselection direction for splitting
super + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}

